# Description: Global Git config file
# Location: ~/.gitconfig

[user]
	name = <firstname> <lastname>
	email = <email@example.com>

[color]
	diff = auto
	interactive = auto
	ui = true
	status = auto
	branch = auto

[core]
	pager = less -FRSX
	editor = vim
	autocrlf = input
	safecrlf = true
	excludesfile = /home/<username>/.gitignore

[merge]
	tool = vimdiff

[alias]
	refresh = !git diff --cached --name-only | xargs git add
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	tree = log --all --graph --format='%C(green)%h%Creset %C(yellow)%an%Creset %C(blue bold)%ad%Creset %C(red bold)%d%Creset%s' --date=relative --abbrev-commit --decorate
	dc = diff --cached
	st = status
